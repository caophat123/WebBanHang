@model DoAnPC.Models.OrderDetail

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}



<div style="margin-top:70px; width: 60%; float: right; margin-right: 15%; font-size: 15px;">
    <h2 style="text-align:center;">Are you sure you want to delete this?</h2>
    <div>
        
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên khách hàng :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderPro.User.HoTen)
            </dd>
            <dt>
                Tên sản phẩm :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Products.NamePro)
            </dd>

            <dt>
                Số lượng :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                Đơn giá :
            </dt>

            <dd>
                @String.Format("{0:0,0}", Model.UnitPrice)
            </dd>
            <dt>
                Mail liên hệ :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderPro.User.Mail)
            </dd>
            <dt>
                Địa chỉ :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderPro.AddressDeliverry)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left:70px;">
                <input type="submit" value="Delete" class="btn btn-success" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
    </div>