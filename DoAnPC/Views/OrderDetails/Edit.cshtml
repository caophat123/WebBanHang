@model DoAnPC.Models.OrderDetail

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin-top:70px; width: 60%; float: right; margin-right: 20%;">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;">EDIT</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.OrderPro.User.HoTen, "Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
