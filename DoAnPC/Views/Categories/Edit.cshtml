@model DoAnPC.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div style="margin-top:70px; width: 40%; float: right; margin-right: 25%;">
    <h2 style="text-align: center">CHỈNH SỬA CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new
            {
                @class = "text-danger"
            })

            @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <div style="margin-left: 15px;">

                MÃ CATEGORY
                <br/>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                </div>
            </div>
        <div class="form-group">
            <div style="margin-left: 15px;">

                TÊN CATEGORY
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div style="margin-left: 15px;">
                    <input type="submit" value="LƯU" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>
    }
    
</div>