@model DoAnPC.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin-top:70px; width: 60%; float: right; margin-right: 20%; font-size: 15px;">

    <div>
        <h4 style="text-align:center;">CHI TIẾT</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên đăng nhập :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>
                Họ Tên :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Mail :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mail)
            </dd>

            <dt>
                Mật Khẩu :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>

        </dl>
    </div>
    <p style="margin-left: 70px;">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
    </p>
</div>